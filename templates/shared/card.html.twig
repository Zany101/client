<div class="card {% block cardCss %}{% endblock %} mb-4">
    {% if block('cardHeader') %}
      <div class="card-header">{% block cardHeader %}{% endblock %}</div>
    {% endif %}
    {% if block('cardContent') is defined %}
      <div class="card-body">{% block cardContent %}{% endblock %}</div>
    {% endif %}
    {% if block('cardFooter') %}
      <div class="card-footer text-muted">{% block cardFooter %}{% endblock %}</div>
    {% endif %}
</div>
