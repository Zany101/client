
{% block navTab %}
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="{{ template(_self)  }}-tab" data-toggle="tab" data-target="#{{ template(_self)  }}" type="button" role="tab" aria-controls="{{ template(_self)  }}" aria-selected="false">{{ template(_self)  }}</button>
  </li>
{% endblock %}
{% block tab %}
<div class="tab-pane fade" id="{{ template(_self)  }}" role="tabpanel" aria-labelledby="{{ template(_self)  }}-tab">
  <div class="form-row">
      <div class="form-group col">
          {{ form_widget(form.gameBukkitConfig.enabled) }}
          <div class="form-error">{{ form_errors(form.gameBukkitConfig.enabled) }}</div>
      </div>
  </div>
  <div class="form-row">
      <div class="form-group col">
          {{ form_widget(form.gameBukkitConfig.pluginsPath) }}
          <div class="form-error">{{ form_errors(form.gameBukkitConfig.pluginsPath) }}</div>
      </div>
  </div>
  <div class="form-row">
      <div class="form-group col">
          {{ form_widget(form.gameBukkitConfig.server) }}
          <div class="form-error">{{ form_errors(form.gameBukkitConfig.server) }}</div>
      </div>
  </div>
</div>
{% endblock %}
